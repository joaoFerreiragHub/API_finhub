  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "responses": {
      "Unauthorized": {
        "description": "Token ausente ou invalido",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/ErrorResponse"
            }
          }
        }
      }
    },
    "schemas": {
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string"
          },
          "details": {
            "type": "string"
          }
        },
        "required": [
          "error"
        ]
      },
      "FollowActionResult": {
        "type": "object",
        "properties": {
          "created": {
            "type": "boolean"
          },
          "removed": {
            "type": "boolean"
          },
          "message": {
            "type": "string"
          }
        },
        "required": [
          "message"
        ]
      },
      "FavoriteInput": {
        "type": "object",
        "properties": {
          "targetType": {
            "type": "string",
            "enum": [
              "article",
              "video",
              "course",
              "live",
              "podcast",
              "book"
            ]
          },
          "targetId": {
            "type": "string"
          }
        },
        "required": [
          "targetType",
          "targetId"
        ]
      },
      "FavoriteActionResult": {
        "type": "object",
        "properties": {
          "created": {
            "type": "boolean"
          },
          "removed": {
            "type": "boolean"
          },
          "message": {
            "type": "string"
          }
        },
        "required": [
          "message"
        ]
      },
      "NotificationPreferences": {
        "type": "object",
        "properties": {
          "follow": {
            "type": "boolean"
          },
          "comment": {
            "type": "boolean"
          },
          "reply": {
            "type": "boolean"
          },
          "rating": {
            "type": "boolean"
          },
          "like": {
            "type": "boolean"
          },
          "mention": {
            "type": "boolean"
          },
          "content_published": {
            "type": "boolean"
          }
        },
        "required": [
          "follow",
          "comment",
          "reply",
          "rating",
          "like",
          "mention",
          "content_published"
        ]
      },
      "NotificationPreferencesResponse": {
        "type": "object",
        "properties": {
          "notificationPreferences": {
            "$ref": "#/components/schemas/NotificationPreferences"
          }
        },
        "required": [
          "notificationPreferences"
        ]
      },
      "NotificationPreferencesUpdateInput": {
        "type": "object",
        "properties": {
          "follow": {
            "type": "boolean"
          },
          "comment": {
            "type": "boolean"
          },
          "reply": {
            "type": "boolean"
          },
          "rating": {
            "type": "boolean"
          },
          "like": {
            "type": "boolean"
          },
          "mention": {
            "type": "boolean"
          },
          "content_published": {
            "type": "boolean"
          }
        }
      },
      "CreatorSummary": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "username": {
            "type": "string"
          },
          "avatar": {
            "type": "string"
          }
        },
        "required": [
          "id"
        ]
      },
      "CreatorSubscriptionStatus": {
        "type": "object",
        "properties": {
          "creatorId": {
            "type": "string"
          },
          "eventType": {
            "type": "string",
            "enum": [
              "content_published"
            ]
          },
          "isSubscribed": {
            "type": "boolean"
          },
          "hasOverride": {
            "type": "boolean"
          },
          "isFollowing": {
            "type": "boolean"
          },
          "followedAt": {
            "type": "string",
            "format": "date-time"
          },
          "creator": {
            "$ref": "#/components/schemas/CreatorSummary"
          }
        },
        "required": [
          "creatorId",
          "eventType",
          "isSubscribed",
          "hasOverride"
        ]
      },
      "CreatorSubscriptionMutationResult": {
        "type": "object",
        "properties": {
          "creatorId": {
            "type": "string"
          },
          "eventType": {
            "type": "string",
            "enum": [
              "content_published"
            ]
          },
          "isSubscribed": {
            "type": "boolean"
          },
          "hasOverride": {
            "type": "boolean"
          },
          "updated": {
            "type": "boolean"
          },
          "created": {
            "type": "boolean"
          },
          "creator": {
            "$ref": "#/components/schemas/CreatorSummary"
          }
        },
        "required": [
