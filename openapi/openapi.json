    "/healthz": {
      "get": {
        "tags": [
          "Health"
        ],
        "summary": "Liveness",
        "responses": {
          "200": {
            "description": "Aplicacao ativa",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "ok"
                    },
                    "uptimeSeconds": {
                      "type": "number"
                    },
                    "timestamp": {
                      "type": "string",
                      "format": "date-time"
                    }
                  },
                  "required": [
                    "status",
                    "uptimeSeconds",
                    "timestamp"
                  ]
                }
              }
            }
          }
        }
      }
    },
