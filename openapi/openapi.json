          "eventType",
          "isSubscribed",
          "hasOverride",
          "updated",
          "created"
        ]
      },
      "CreatorSubscriptionListResponse": {
        "type": "object",
        "properties": {
          "items": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/CreatorSubscriptionStatus"
            }
          },
          "pagination": {
            "type": "object",
            "properties": {
              "page": {
                "type": "integer"
              },
              "limit": {
                "type": "integer"
              },
              "total": {
                "type": "integer"
              },
              "pages": {
                "type": "integer"
              }
            },
            "required": [
              "page",
              "limit",
              "total",
              "pages"
            ]
          }
        },
        "required": [
          "items",
          "pagination"
        ]
      },
      "RatingInput": {
        "type": "object",
        "properties": {
          "targetType": {
            "type": "string"
          },
          "targetId": {
            "type": "string"
          },
          "rating": {
            "type": "number",
            "minimum": 1,
            "maximum": 5
          },
          "review": {
            "type": "string"
          }
        },
        "required": [
          "targetType",
          "targetId",
          "rating"
        ]
      },
      "RatingReactionInput": {
        "type": "object",
        "properties": {
          "reaction": {
            "type": "string",
            "enum": [
              "like",
              "dislike",
              "none"
            ]
          }
        },
        "required": [
          "reaction"
        ]
      },
      "RatingReactionResult": {
        "type": "object",
        "properties": {
          "reaction": {
            "type": "string",
            "nullable": true,
            "enum": [
              "like",
              "dislike",
              null
            ]
          },
          "updated": {
            "type": "boolean"
          },
          "message": {
            "type": "string"
          }
        },
        "required": [
          "reaction",
          "updated",
          "message"
        ]
      },
      "CommentInput": {
        "type": "object",
        "properties": {
          "targetType": {
            "type": "string"
          },
          "targetId": {
            "type": "string"
          },
          "content": {
            "type": "string",
            "minLength": 1
          },
          "parentCommentId": {
            "type": "string"
          }
        },
        "required": [
          "targetType",
          "targetId",
          "content"
        ]
      }
    }
  }
